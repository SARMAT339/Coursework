@model CaesarCipherApp.Models.Caesar

<h2>Шифр Цезаря</h2>

<form asp-controller="Caesar" asp-action="Index" method="post">
    <div>
        <label asp-for="InputText">Текст:</label>
        <input asp-for="InputText" class="form-control" />
    </div>

    <div>
        <label asp-for="Key">Ключ:</label>
        <input asp-for="Key" class="form-control" />
    </div>

    <div class="mt-3">
        <button type="submit" name="action" value="encrypt" class="btn btn-primary">Шифровать</button>
        <button type="submit" name="action" value="decrypt" class="btn btn-secondary">Дешифровать</button>
    </div>

    @if (!string.IsNullOrEmpty(Model?.OutputText))
    {
        <div class="mt-3">
            <label>Результат:</label>
            <textarea class="form-control" rows="3" readonly>@Model.OutputText</textarea>
        </div>
    }
</form>